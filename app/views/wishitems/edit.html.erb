<section class="hero is-success">
    <div class="hero-body">
        <div class="container">
            <h1 class="title">
            Edit Wish Item
            </h1>
        </div>
    </div>
</section>

<% if @wishitem.errors.any? %>
    <div class="notification is-danger">
        <h2><%= pluralize(@wishitem.errors.count, "error") %> There are some empty fields. </h2>
        <ul>
            <% @wishitem.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>

<section class="section">
    <div class="container">
        <div columns is-centered">
            <div class="column is-6">
                <%= form_for @wishitem do |f| %>
                <div class="field">
                    <%= f.label :name, "Product Name", class: "label" %>
                    <%= f.text_field :name, class: "input" %>
                </div>
                <div class="field">
                    <%= f.label :description, "Product Description", class: "label" %>
                    <%= f.text_area :description, class: "textarea" %>
                </div>
                <div class="field">
                    <%= f.label :link, "Link to Product", class: "label" %>
                    <%= f.text_field :link, class: "input" %>
                </div>
                <div class="columns is-mobile is-centered">
                    <div class="column is-narrow">
                        <p class="bd-notification is-primary">
                        <%= f.submit "Update", class: "button is-success" %>
                        </p>
                    </div>
                    <%# <div class="column is-narrow">
                        <p class="bd-notification is-primary">
                        <%= link_to "Delete Item", wishitem_path(@wishitem), method: :delete, class: "button is-danger" %>
                        <%# </p>
                    </div> %> 
                </div>
                <% end %>
            </div>
        </div>
    </div>
</section>


